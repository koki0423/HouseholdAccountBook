<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="322.0" xmlns="http://javafx.com/javafx/19"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.SettingWindowController" >
	<center>
		<VBox prefHeight="362.0" prefWidth="600.0"
			BorderPane.alignment="CENTER">
			<children>
				<TextField fx:id="txfIP" promptText="IPアドレス">
					<VBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</VBox.margin>
				</TextField>
				<TextField fx:id="txfUser" promptText="ユーザー名">
					<VBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</VBox.margin>
				</TextField>
				<TextField fx:id="txfPass" promptText="パスワード">
					<VBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</VBox.margin>
				</TextField>
			</children>
		</VBox>
	</center>
	<bottom>
		<HBox prefHeight="9.0" prefWidth="322.0"
			BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="btnDiscard" mnemonicParsing="false"
					onAction="#WindowClose" text="保存せずに戻る">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="btnSave" mnemonicParsing="false" text="保存して戻る" onAction="#ButtonEvent">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Button>
			</children>
		</HBox>
	</bottom>
</BorderPane>
